[flake8]
# Maximum line length
max-line-length = 120

# Maximum complexity
max-complexity = 10

# Ignore specific errors
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    E402,  # module level import not at top of file
    F401,  # imported but unused (in __init__.py)

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .mypy_cache,
    .pytest_cache,
    .tox,
    notebooks,
    data,
    models,
    logs

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403
    test_*.py:F401,F811

# Show source code for each error
show-source = True

# Show the relevant PEP 8 text for each error
show-pep8 = True

# Count the number of occurrences of each error/warning code
count = True

# Print total number of errors
statistics = True

# McCabe complexity threshold
max-complexity = 10

# Docstring conventions
docstring-convention = google
